<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="using:DaFiles.Converters"
             xmlns:sty="using:FluentAvalonia.Styling"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             x:Class="DaFiles.App"
             RequestedThemeVariant="Default">
    <Application.Resources>
		<converters:ByteSizeToStringConverter x:Key="ByteSizeToStringConverter"/>	
        <converters:DirectoryItemTypeToStringConverter x:Key="DirectoryItemTypeToStringConverter"/>
        <converters:EnumToListConverter x:Key="EnumToListConverter"/>
        <converters:SecureStringToStringConverter x:Key="SecureStringToStringConverter"/>

        <ControlTheme x:Key="{x:Type ui:FontIcon}" TargetType="ui:FontIcon">
			<Setter Property="FontFamily" Value="Segoe Fluent Icons"/>
        </ControlTheme>
    </Application.Resources>

    <Application.Styles>
        <sty:FluentAvaloniaTheme />

        <!-- Style selectors for FontIcon icons -->
        <Style Selector="ui|FontIcon.iconClosePaneMirrored">
			<Setter Property="Glyph" Value="&#xea49;"/>
        </Style>
        <Style Selector="ui|FontIcon.iconOpenPaneMirrored">
			<Setter Property="Glyph" Value="&#xea5b;"/>
        </Style>
    </Application.Styles>
</Application>
